<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for menu -->
    <style name="MenuCategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MenuCategoryText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="MenuCategoryIcon">
        <item name="android:padding">16dp</item>
        <item name="android:tint">@android:color/background_light</item>
    </style>

    <!-- Style for album -->
    <!-- Name of band -->>

    <style name="NameOfBand">
        <item name="android:textSize">@dimen/size_title_of_album</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title of album -->>

    <style name="TitleOfAlbum">
        <item name="android:textSize">@dimen/size_title_of_album</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
